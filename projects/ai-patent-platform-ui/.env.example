# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="AI Patent Platform"

# API Configuration
NEXT_PUBLIC_API_URL=https://api.solveintelligence.com
API_SECRET_KEY=your_api_secret_key_here

# Authentication (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# OAuth Providers (for patent firm SSO)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Database (if using direct DB connection)
DATABASE_URL=postgresql://username:password@localhost:5432/patent_platform

# AI Services
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Patent Office APIs
USPTO_API_KEY=your_uspto_api_key
EPO_API_KEY=your_epo_api_key

# AWS Configuration (for deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=patent-documents-bucket

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_id

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Development/Debug
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=false
ENABLE_BUNDLE_ANALYZER=false

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@company.com
SMTP_PASS=your_email_password

# Legal Compliance
ENCRYPTION_KEY=your_32_character_encryption_key
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for legal compliance