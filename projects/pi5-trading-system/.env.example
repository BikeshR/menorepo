# Pi5 Trading System - Environment Configuration
# Copy this file to .env and configure your settings

# ================================
# Database Configuration
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pi5_trading
DB_USER=pi5trader
DB_PASSWORD=trading_secure_2025
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5

# ================================
# Redis Configuration
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================
# Application Configuration
# ================================
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Application host and port
APP_HOST=0.0.0.0
APP_PORT=8080

# ================================
# Trading Configuration
# ================================
INITIAL_CASH=100000.0
DEMO_MODE=true
PAPER_TRADING=true

# Trading hours (UTC)
TRADING_START_HOUR=14
TRADING_END_HOUR=21

# Risk management
MAX_POSITION_SIZE=0.15
MAX_PORTFOLIO_EXPOSURE=0.9
MAX_DAILY_LOSS=0.03
MAX_DRAWDOWN=0.15

# ================================
# Market Data Providers
# ================================

# Yahoo Finance (free)
YAHOO_FINANCE_ENABLED=true

# Alpha Vantage (requires API key)
ALPHA_VANTAGE_ENABLED=false
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# IEX Cloud (requires API key)
IEX_CLOUD_ENABLED=false
IEX_CLOUD_API_KEY=your_iex_cloud_api_key_here
IEX_CLOUD_SANDBOX=true

# ================================
# Broker Configuration
# ================================

# Paper Trading (always enabled)
PAPER_TRADING_ENABLED=true
PAPER_TRADING_COMMISSION=1.0
PAPER_TRADING_SLIPPAGE_BPS=5

# Alpaca (requires API keys)
ALPACA_ENABLED=false
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Interactive Brokers (requires TWS/Gateway)
IBKR_ENABLED=false
IBKR_HOST=localhost
IBKR_PORT=7497
IBKR_CLIENT_ID=1

# ================================
# Notification Configuration
# ================================

# Email notifications
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=pi5trading@yourdomain.com
EMAIL_TO=trader@yourdomain.com

# Discord notifications
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here

# Slack notifications
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook_url_here

# ================================
# Security Configuration
# ================================

# JWT secret for API authentication
JWT_SECRET=your_very_secure_jwt_secret_key_here_at_least_32_characters

# API rate limiting
API_RATE_LIMIT_PER_MINUTE=60

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# ================================
# Performance Configuration
# ================================

# Event bus configuration
EVENT_BUS_MAX_QUEUE_SIZE=10000
EVENT_BUS_MAX_CONCURRENT_HANDLERS=50
EVENT_BUS_HANDLER_TIMEOUT=30.0

# Database connection pool
DB_POOL_SIZE=20
DB_POOL_TIMEOUT=30

# Cache settings
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# ================================
# Monitoring & Logging
# ================================

# Log file configuration
LOG_FILE_PATH=/app/logs/pi5_trading.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_BACKUP_COUNT=5

# Metrics collection
METRICS_ENABLED=true
METRICS_PORT=9090

# Health check configuration
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10

# ================================
# Development Settings
# ================================

# Development mode settings (only for development)
DEV_MODE=false
DEV_AUTO_RELOAD=false
DEV_MOCK_MARKET_DATA=false

# Testing configuration
TEST_MODE=false
TEST_DB_NAME=pi5_trading_test